<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afrasali.afras.shopsboon.Registration">

    <EditText
        android:id="@+id/RName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:hint="  User Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/RPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/RName"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/RPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/RPassword"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="  Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/RDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/RPhone"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="  Date of Joining"
        android:inputType="date" />

    <Button
        android:id="@+id/RRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:onClick="RCK"
        android:text="Register" />
</RelativeLayout>
